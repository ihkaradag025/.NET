@using MVC_StokTakipOtomasyonu.Models.Entity
@model List<MVC_StokTakipOtomasyonu.Models.Entity.Kategoriler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kategoriler Ana Sayfası</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>ID</td>
            <td>Kategori</td>
            <td>Açıklama</td>
            <td>Sil</td>
            <td>Güncelle</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ID</td>
            <td>@item.Kategori</td>
            <td>@item.Aciklama</td>
            <td><a href="/Kategoriler/SilBilgiGetir/@item.ID" class="btn btn-danger" >Sil</a></td>
            <td><a href="/Kategoriler/GuncelleBilgiGetir/@item.ID" class="btn btn-warning">Güncelle</a></td>
        </tr>
        }

    </tbody>

</table>
<a href="/Kategoriler/Ekle/" class="btn btn-success"  style = "margin-top:10px; margin-bottom:10px;" >Kategori Ekle</a> 
