@model MVC_StokTakipOtomasyonu.Models.Entity.Markalar
@{
    ViewBag.Title = "GuncelleBilgiGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marka Güncelleme Sayfası</h2>

<div class="container">
    @using (Html.BeginForm("Guncelle", "Markalar", FormMethod.Post))
    {
        @Html.HiddenFor(x=>x.ID)
        <div class="form-group">
            @Html.LabelFor(x => x.Kategoriler.Kategori)
            @Html.DropDownListFor(x=>x.KategoriID, (List<SelectListItem>)ViewBag.l, "---Seçiniz---", new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.KategoriID, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Marka)
            @Html.TextBoxFor(x => x.Marka, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Marka, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Aciklama)
            @Html.TextBoxFor(x => x.Aciklama, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Aciklama, "", new { @class = "text-danger" })
        </div>

        <div>
            <button class="btn btn-success" style="margin:10px 10px;">Kaydet</button>
        </div>
    }
</div>
@section scriptdanger
{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}