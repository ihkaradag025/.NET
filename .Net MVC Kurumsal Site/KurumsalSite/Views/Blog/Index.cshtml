@model IEnumerable<KurumsalSite.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listeleme Sayfası</h2>

<script>
    $(document).ready(function () {
        $('#myTable').DataTable(
            {
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.1.0/i18n/tr.json',
                }
            }
        );
    });
</script>

<a class="btn btn-primary" href="/Blog/Create/">Yeni Blog Ekle</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>İçerik</th>
            <th>Resim Url</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BlogId</td>
            <td>@item.Baslik</td>
            <td>@item.Kategori.KategoriAd</td>
            <td>@Html.Raw(item.Icerik)</td>
            <td><img src="@item.ResimUrl" height="100" width="100" /> </td>
            <td><a href="/Blog/Edit/@item.BlogId">Güncelle</a>|<a href="/Blog/Delete/@item.BlogId">Sil</a></td>
        </tr>
        }

       
    </tbody>
</table>

