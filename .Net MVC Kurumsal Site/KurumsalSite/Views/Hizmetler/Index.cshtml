@model IEnumerable<KurumsalSite.Models.Model.Hizmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-primary" href="/Hizmetler/Create">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HizmetId</td>
                <td>@item.Baslik</td>
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL" alt="hizmetler resmi gelecek" /> </td>
                <td><a href="/Hizmetler/Edit/@item.HizmetId">Güncelle</a> | <a href="/Hizmetler/Delete/@item.HizmetId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>
