@using TravelTripProje.Models.Siniflar
@model List<TravelTripProje.Models.Siniflar.Blog>

@{
    Layout = null;
}
<div class="padding">
    <h4>En Popüler 10 Blog</h4>
    <ul class="list list-pad">
        @{ int i = 0;}

        @foreach (var item in Model)
        {
        <li class="list-bg"><span>@{i++;} @i.</span><a href="/Blog/BlogDetay/@item.BlogId">@item.Baslik</a></li>
            }
        
       
    </ul>
    <a href="/Blog/Index" class="link1">Tüm Blogları Gör</a>
</div>